@{
    Layout = null;
}
@model CounterTexFront.Models.LoginViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="estilos.css">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: linear-gradient(to bottom, #333, #555), url('https://via.placeholder.com/1920x1080') no-repeat center center fixed;
            background-size: cover;
            color: #0f0f0f;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            width: 350px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        body {
            margin: 0;
            padding: 0;
            background-image: url('fondo.jpg');
            background-size: cover;
            background-position: center;
            font-family: sans-serif;
        }

        .logo {
            width: 80px;
            margin-bottom: 20px;
        }

        h2 {
            margin: 0 0 20px;
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

            input[type="text"]:focus,
            input[type="password"]:focus {
                outline: none;
                border-color: #007BFF;
            }

        .btn {
            background: #007BFF;
            color: #fff;
            border: none;
            padding: 10px 15px;
            font-size: 14px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            .btn:hover {
                background: #0056b3;
            }

        .google-login {
            background: #db4437;
            margin-top: 10px;
        }

            .google-login:hover {
                background: #c23321;
            }

        .form-options {
            margin: 10px 0;
        }

        .forgot-password,
        .register-link {
            color: #007BFF;
            text-decoration: none;
        }

            .forgot-password:hover,
            .register-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-card">
            <img src="~/images/logo1.png" alt="Logo" class="logo">
            <h2>Iniciar Sesión</h2>
            <form id="loginForm" method="post" action="@Url.Action("Login","Login")">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "correo@ejemplo.com" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <input type="submit" class="btn" value="Ingresar" />
                <button type="button" class="btn google-login" id="googleLogin">Continuar con Google</button>

                <p>¿No tienes una cuenta? <a href="@Url.Action("Registro", "Registro")" class="register-link">Regístrate</a></p>
                <div class="form-options">
                    <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        const googleLoginButton = document.getElementById('googleLogin');
        googleLoginButton.addEventListener('click', () => {
            alert('Función de inicio de sesión con Google no implementada.');
        });
    </script>
</body>
</html>
